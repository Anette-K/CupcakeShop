@model CupcakeShop.Core.Models.ProductCategory

@*@{
        ViewBag.Title = "Delete";
    }*@

<div class="pages-text">
    <div class="pages-title">
        <h2>Delete Category</h2>
    </div>
    <div class="contacts-container">
        <div class="text contacts-text product-list-admin-view">
            <div class="checkout-container back-admin-container">
                <a href="@Url.Action("Index", "ProductCategoryManager")" class="btn btn-checkout">Back to Category Page</a>
            </div>
            <h3 style="text-align:left; margin-top:50px">Are you sure you want to delete this category?</h3>
            <p>
                If so, click on the delete button.
            </p>
        </div>
        <div class="text contacts-text container mt-5 contacts-map">
            <div class="col-md-6" style="max-width:70%; margin-left:-100px">
                <div class="list-group admin-text">

                    <div class="form-horizontal form-horizontal-delete">
                        <dl class="dl-horizontal" style="width:100px;">
                            <dt>
                                @Html.DisplayNameFor(model => model.Category)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Category)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Delete" class="btn btn-checkout btn-delete-big" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>